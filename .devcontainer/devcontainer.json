{
  "name": "React Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "forwardPorts": [3000, 5000],   // 3000 for React, 5000 for Express backend
  "remoteUser": "node",
  "scripts": {
  "start": "react-scripts start",
  "proxy": "uvicorn mistral_proxy:app --host 0.0.0.0 --port 8000"
  }
}
